
#!/usr/bin/env bash
# This script is displays numbers from 1 to 20

msg="bad luck from China"
msg1="bad luck from Japan"
msg2="bad luck from Italy"
num=1
while [ "$num" -lt 21 ]; do
	echo "$i"
	# if statement
	if [ "$num" -eq 4 ]; then
		echo "$msg"
	elif [ "$num" -eq 9 ]; then
		echo "$msg1"
	elif [ "$num" -eq 17 ]; then
		echo "$msg2"	
	fi
	((num++))
done
